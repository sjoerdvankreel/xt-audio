<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <name>XT-Audio</name>
    <packaging>jar</packaging>
    <version>2.1</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>xt.audio.debug</artifactId>
    <groupId>com.github.sjoerdvankreel</groupId>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <dependencies>
        <dependency>
            <version>5.10.0</version>
            <artifactId>jna</artifactId>
            <groupId>net.java.dev.jna</groupId>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>${basedir}/../../../src/java/xt</sourceDirectory>
        <directory>${basedir}/../../../dist/java/xt/debug/target</directory>
        <outputDirectory>${basedir}/../../../dist/java/xt/debug/classes</outputDirectory>
        <plugins>
            <plugin>
                <version>3.8.1</version>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>17</source>
                    <target>17</target>
                </configuration>
            </plugin>
            <plugin>
                <version>3.2.0</version>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.2.0</version>
                <configuration>
                    <overwrite>true</overwrite>
                </configuration>
                <executions>
                    <execution>
                        <id>copy-resources-win32-x86</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/../../../dist/java/xt/debug/classes/win32-x86</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/../../../dist/core/xt/x86/Debug</directory>
                                    <includes>
                                        <include>xt-audio.dll</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-resources-win32-x86-64</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/../../../dist/java/xt/debug/classes/win32-x86-64</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/../../../dist/core/xt/x64/Debug</directory>
                                    <includes>
                                        <include>xt-audio.dll</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-resources-linux-x86</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/../../../dist/java/xt/debug/classes/linux-x86</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/../../../dist/core/xt/x86/Debug</directory>
                                    <includes>
                                        <include>libxt-audio.so</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-resources-linux-x86-64</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/../../../dist/java/xt/debug/classes/linux-x86-64</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/../../../dist/core/xt/x64/Debug</directory>
                                    <includes>
                                        <include>libxt-audio.so</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>