<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <name>XT-Audio</name>
    <packaging>jar</packaging>
    <version>2.0-SNAPSHOT</version>
    <artifactId>xt.audio</artifactId>
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.github.sjoerdvankreel</groupId>
    <url>https://sjoerdvankreel.github.io/xt-audio/</url>
    <description>Streaming audio focused on low latency, platform independence and API simplicity.</description>
    <developers>
        <developer>
            <id>sjoerdvankreel</id>
            <name>Sjoerd van Kreel</name>
            <email>sjoerdvankreel@gmail.com</email>
            <url>https://github.com/sjoerdvankreel</url>
            <roles>
                <role>developer</role>
            </roles>
        </developer>
    </developers>
    <licenses>
        <license>
            <name>MIT License</name>
            <url>http://www.opensource.org/licenses/mit-license.php</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <scm>
        <url>https://github.com/sjoerdvankreel/xt-audio</url>
        <connection>scm:git:git://github.com/sjoerdvankreel/xt-audio.git</connection>
        <developerConnection>scm:git:git@github.com:sjoerdvankreel/xt-audio.git</developerConnection>
    </scm>
    <dependencies>
        <dependency>
            <version>5.10.0</version>
            <artifactId>jna</artifactId>
            <groupId>net.java.dev.jna</groupId>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>${basedir}/../../../src/java/xt</sourceDirectory>
        <directory>${basedir}/../../../dist/java/xt/${xt.audio.configuration}/target</directory>
        <outputDirectory>${basedir}/../../../dist/java/xt/${xt.audio.configuration}/classes</outputDirectory>
        <plugins>
            <plugin>
                <version>3.8.1</version>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>17</source>
                    <target>17</target>
                </configuration>
            </plugin>
            <plugin>
                <version>3.2.0</version>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.2.0</version>
                <configuration>
                    <overwrite>true</overwrite>
                </configuration>
                <executions>
                    <execution>
                        <id>copy-resources-win32-x86</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/../../../dist/java/xt/${xt.audio.configuration}/classes/win32-x86</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/../../../dist/core/xt/x86/${xt.audio.configuration}</directory>
                                    <includes>
                                        <include>xt-audio.dll</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-resources-win32-x86-64</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/../../../dist/java/xt/${xt.audio.configuration}/classes/win32-x86-64</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/../../../dist/core/xt/x64/${xt.audio.configuration}</directory>
                                    <includes>
                                        <include>xt-audio.dll</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-resources-linux-x86</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/../../../dist/java/xt/${xt.audio.configuration}/classes/linux-x86</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/../../../dist/core/xt/x86/${xt.audio.configuration}</directory>
                                    <includes>
                                        <include>libxt-audio.so</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-resources-linux-x86-64</id>
                        <phase>prepare-package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/../../../dist/java/xt/${xt.audio.configuration}/classes/linux-x86-64</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>${basedir}/../../../dist/core/xt/x64/${xt.audio.configuration}</directory>
                                    <includes>
                                        <include>libxt-audio.so</include>
                                    </includes>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <version>3.3.1</version>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <configuration>
                    <source>17</source>
                    <sourceFileExcludes>
                        <sourceFileExclude>**/module-info.java</sourceFileExclude>
                    </sourceFileExcludes>
                    <reportOutputDirectory>${basedir}/../../../dist/java/doc</reportOutputDirectory>
                </configuration>
                <executions>
                    <execution>
                        <id>attach-javadocs</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.2.1</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>