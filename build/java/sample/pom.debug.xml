<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <packaging>jar</packaging>
    <version>2.1</version>
    <modelVersion>4.0.0</modelVersion>
    <artifactId>xt.sample.debug</artifactId>
    <groupId>com.github.sjoerdvankreel</groupId>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <dependencies>
        <dependency>
            <version>5.10.0</version>
            <artifactId>jna</artifactId>
            <groupId>net.java.dev.jna</groupId>
        </dependency>
        <dependency>
            <version>2.1</version>
            <artifactId>xt.audio.debug</artifactId>
            <groupId>com.github.sjoerdvankreel</groupId>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>${basedir}/../../../src/java/sample</sourceDirectory>
        <directory>${basedir}/../../../dist/java/sample/debug/target</directory>
        <outputDirectory>${basedir}/../../../dist/java/sample/debug/classes</outputDirectory>
        <plugins>
            <plugin>
                <version>3.8.1</version>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>17</source>
                    <target>17</target>
                </configuration>
            </plugin>
            <plugin>
                <version>3.2.0</version>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>copy-dependencies</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <version>3.2.0</version>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <addClasspath>true</addClasspath>
                            <mainClass>xt.sample.Sample</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>